  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go Debug",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "host": "localhost",
      "port": 2345,
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose",
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/app",
        },
      ]
    }
  ]
}
